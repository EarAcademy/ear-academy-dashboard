generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Market {
  id        String   @id @default(cuid())
  name      String   @unique
  code      String   @unique
  regions   Region[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Region {
  id           String   @id @default(cuid())
  name         String
  marketId     String
  market       Market   @relation(fields: [marketId], references: [id])
  totalSchools Int      @default(0)
  schools      School[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([marketId, name])
}

model School {
  id               String         @id @default(cuid())
  name             String
  regionId         String
  region           Region         @relation(fields: [regionId], references: [id])
  type             String?
  email            String?
  phone            String?
  contactPerson    String?
  activeCampaignId String?        @unique
  status           String         @default("uncontacted")
  notes            String?
  pipelineStageId  String?
  pipelineStage    PipelineStage? @relation(fields: [pipelineStageId], references: [id])
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@index([regionId])
  @@index([status])
  @@index([activeCampaignId])
}

model Pipeline {
  id        String          @id @default(cuid())
  name      String          @unique
  acGroupId Int             @unique
  stages    PipelineStage[]
  sortOrder Int             @default(0)
}

model PipelineStage {
  id         String   @id @default(cuid())
  name       String
  acStageId  Int      @unique
  pipelineId String
  pipeline   Pipeline @relation(fields: [pipelineId], references: [id])
  sortOrder  Int      @default(0)
  schools    School[]

  @@index([pipelineId])
}

model SyncLog {
  id             String    @id @default(cuid())
  syncType       String
  status         String
  contactsSynced Int       @default(0)
  errors         String?
  startedAt      DateTime  @default(now())
  completedAt    DateTime?
}
